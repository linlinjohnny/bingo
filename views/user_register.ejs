<!DOCTYPE html>
<html>
    <head>
        <%- include head.ejs %>
    </head>
    <body>
        <%- include topBar.ejs %>
        <div class='longinPanel container-fluid'>
            <div class='title'>
                註冊
            </div>
            <form class="form-horizontal" action='/users/ax_register' method='post'>
                <div class="form-group">
                    <label for="inputAccount" class="col-md-4 control-label">帳號</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="inputAccount" name='account' placeholder="帳號">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPwd" class="col-md-4 control-label">密碼</label>
                    <div class="col-md-8">
                        <input type="password" class="form-control" id="inputPwd" name='password' placeholder="密碼">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputRePwd" class="col-md-4 control-label">重新輸入密碼</label>
                    <div class="col-md-8">
                        <input type="password" class="form-control" id="inputRePwd" placeholder="重新輸入密碼">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="col-md-4 control-label">暱稱</label>
                    <div class="col-md-8">
                        <input type="password" class="form-control" id="inputName" name='name'>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8 text-right">
                        <button type="submit" class="btn btn-primary">確定</button>
                    </div>
                </div>
            </form>
            <a href='/users/login'>登入</a>
        </div>

        <%- include footer.ejs %>
    </body>
</html>
